{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('user_admin') }}">Admin Dashboard</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-user"></i> {{ app.user.username }} <b class="caret"></b></a>

                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('user_logout') }}"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- /.navbar-right -->
    </nav>
    <br>
    <br>
    <br>
    <h1>Product list</h1>

    <table>
        <thead>
        <tr>

            <th>Name</th>
            <th>Email</th>
            <th>Date</th>
            <th>Updatedate</th>
            <th>Active</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.username }}</td>


                <td>
                    {{ user.email }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('create_product_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}